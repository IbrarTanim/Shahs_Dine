<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="6">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="6">

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2" />


            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/ivUserPic"
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/seventy"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/pr_5"
                app:siBorderColor="@color/grey"
                app:siBorderWidth="2dp" />


            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="2" />


    </LinearLayout>


    <ImageButton
        android:id="@+id/ibtnBackDescription"
        android:layout_width="@dimen/sixty"
        android:layout_height="@dimen/sixty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/img_back" />


</RelativeLayout>
